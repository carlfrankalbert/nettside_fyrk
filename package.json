{
  "name": "nettside-fyrk",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "wrangler pages dev dist --compatibility-date=2024-01-01 --port=4321",
    "astro": "astro",
    "typecheck": "astro check",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "npm run typecheck && npm run lint && npm run test:unit && npm run test:local",
    "test:ci": "npm run typecheck && npm run lint && npm run test:unit && npm run test:smoke",
    "test:local": "playwright test --project=a11y --project=konseptspeilet",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --project=smoke",
    "test:e2e:all": "playwright test",
    "test:smoke": "playwright test --project=smoke --project=smoke-mobile --project=smoke-tablet",
    "test:a11y": "playwright test --project=a11y",
    "test:visual": "playwright test --project=visual",
    "test:visual-mobile": "playwright test --project=visual-mobile",
    "test:ux-mobile": "playwright test --project=ux-mobile",
    "test:mobile": "playwright test --project=visual-mobile --project=ux-mobile",
    "test:okr-api": "playwright test --project=okr-api",
    "test:konseptspeilet": "playwright test --project=konseptspeilet",
    "test:theme": "playwright test --project=theme",
    "test:ui": "playwright test --ui",
    "test:load": "k6 run load-tests/okr-api.js",
    "test:load:sustained": "k6 run --env SCENARIO=load load-tests/okr-api.js",
    "test:load:stress": "k6 run --env SCENARIO=stress load-tests/okr-api.js",
    "test:load:spike": "k6 run --env SCENARIO=spike load-tests/okr-api.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@astrojs/cloudflare": "^11.2.0",
    "@astrojs/node": "^8.3.4",
    "@astrojs/react": "^4.0.0",
    "@fontsource/inter": "^5.2.8",
    "astro": "^4.0.0",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/tailwind": "^5.1.0",
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "wrangler": "^4.55.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix --max-warnings 0",
    "*.astro": "eslint --fix --max-warnings 0"
  }
}
