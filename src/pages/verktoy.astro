---
/**
 * Dedicated tools page
 * Groups all FYRK tools by intent with disclaimers and service bridge
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { verktoyPageContent } from '../data/verktoy';

const { seo, title, subtitle, tagline, sections, disclaimerHtml, bridgeCTA } = verktoyPageContent;
---

<BaseLayout
  title={seo.title}
  description={seo.description}
>
  <article class="py-16 md:py-24 px-6">
    <div class="max-w-3xl mx-auto">

      <!-- Header -->
      <header class="mb-16">
        <h1 class="text-h2 md:text-h1 font-semibold text-brand-navy mb-4 leading-tight">
          {title}
        </h1>
        <p class="text-xl md:text-2xl text-neutral-600 leading-relaxed mb-3">
          {subtitle}
        </p>
        <p class="text-base text-neutral-500">
          {tagline}
        </p>
      </header>

      {sections.map((section) => (
        <section class="mb-16">
          <h2 class="text-h3 font-semibold text-brand-navy mb-6">{section.heading}</h2>
          <div class="space-y-4">
            {section.tools.map((tool) => (
              <div class="bg-white rounded-lg p-6 md:p-8 border border-neutral-200 shadow-sm hover:border-neutral-300 transition-colors">
                <h3 class="text-h4 font-semibold text-brand-navy mb-2">
                  {tool.name}
                  {'badge' in tool && tool.badge && (
                    <span class="text-xs font-medium text-amber-700 bg-amber-100 px-2 py-0.5 rounded-full align-middle ml-2">{tool.badge}</span>
                  )}
                </h3>
                <p class="text-neutral-600 mb-4">{tool.description}</p>
                <a href={tool.href} class="btn btn-primary no-underline inline-flex">
                  {tool.cta}
                </a>
              </div>
            ))}
          </div>
        </section>
      ))}

      <!-- Disclaimer -->
      <p class="text-sm text-neutral-500 mb-16" set:html={disclaimerHtml} />

      <!-- Bridge CTA -->
      <section class="bg-neutral-50 rounded-lg p-8 md:p-10 border border-neutral-200">
        <h2 class="text-h4 font-semibold text-brand-navy mb-3">{bridgeCTA.heading}</h2>
        <p class="text-neutral-600 mb-6">
          {bridgeCTA.body}
        </p>
        <div class="flex flex-wrap gap-3">
          <a href={bridgeCTA.primaryLink.href} class="btn btn-primary no-underline inline-flex">{bridgeCTA.primaryLink.label}</a>
          <a href={bridgeCTA.secondaryLink.href} class="btn btn-outline no-underline inline-flex">{bridgeCTA.secondaryLink.label}</a>
        </div>
      </section>

    </div>
  </article>
</BaseLayout>
