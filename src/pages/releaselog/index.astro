---
/**
 * Releaselog list page
 * Shows the latest release notes grouped by date
 * 
 * Layout: Compact card-per-date with list rows for each entry
 * Each date gets its own card with a header bar and list of releases
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('releaselog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 50);

// Group posts by date string
const grouped = new Map<string, typeof posts>();
for (const post of posts) {
  const key = post.data.date.toISOString().slice(0, 10);
  const existing = grouped.get(key) ?? [];
  existing.push(post);
  grouped.set(key, existing);
}

function formatDate(date: Date): string {
  return date.toLocaleDateString('no-NO', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title="Releaselog | FYRK"
  description="Hva er nytt i FYRK sine verktøy og tjenester."
>
  <article class="py-16 md:py-24 px-6">
    <div class="max-w-3xl mx-auto">

      <header class="mb-16">
        <h1 class="text-h2 md:text-h1 font-semibold text-brand-navy mb-4 leading-tight">
          Releaselog
        </h1>
        <p class="text-xl md:text-2xl text-neutral-600 leading-relaxed">
          Hva er nytt — oppdateringer, forbedringer og fiks.
        </p>
      </header>

      <div class="space-y-10">
        {[...grouped.entries()].map(([dateKey, dayPosts]) => (
          <section class="rounded-lg border border-neutral-200 bg-white shadow-sm">
            <div class="border-b border-neutral-100 px-5 py-3 md:px-6">
              <time class="text-sm font-medium text-neutral-500" datetime={dateKey}>
                {formatDate(dayPosts[0].data.date)}
              </time>
            </div>

            <ul class="divide-y divide-neutral-100">
              {dayPosts.map((post) => (
                <li>
                  <a
                    href={`/releaselog/${post.slug}`}
                    class="flex items-start gap-3 px-5 py-3 no-underline hover:bg-neutral-50 transition-colors md:px-6 md:py-4"
                  >
                    <div class="min-w-0 flex-1">
                      <h2 class="text-sm font-semibold text-brand-navy md:text-base">
                        {post.data.title}
                      </h2>
                      <p class="mt-0.5 text-sm text-neutral-500 line-clamp-1">{post.data.summary}</p>
                    </div>
                    {post.data.tags && (
                      <div class="flex shrink-0 gap-1.5 pt-0.5">
                        {post.data.tags.map((tag: string) => (
                          <span class="text-xs bg-neutral-100 text-neutral-500 px-2 py-0.5 rounded">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </a>
                </li>
              ))}
            </ul>
          </section>
        ))}
      </div>

      {posts.length === 0 && (
        <p class="text-neutral-500">Ingen oppdateringer ennå.</p>
      )}

    </div>
  </article>
</BaseLayout>