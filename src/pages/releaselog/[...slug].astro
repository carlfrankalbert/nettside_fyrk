---
/**
 * Releaselog detail page
 * Renders a single release note entry
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('releaselog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'releaselog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString('no-NO', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout
  title={`${post.data.title} | Releaselog | FYRK`}
  description={post.data.summary}
  type="article"
>
  <article class="py-16 md:py-24 px-6">
    <div class="max-w-3xl mx-auto">

      <a href="/releaselog" class="text-sm text-neutral-500 hover:text-brand-navy transition-colors no-underline mb-8 inline-block">
        &larr; Tilbake til releaselog
      </a>

      <header class="mb-10">
        <time class="text-sm text-neutral-500" datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
        <h1 class="text-h2 md:text-h1 font-semibold text-brand-navy mt-1 mb-4 leading-tight">
          {post.data.title}
        </h1>
        {post.data.tags && (
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag: string) => (
              <span class="text-xs bg-neutral-100 text-neutral-600 px-2 py-0.5 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-neutral max-w-none">
        <Content />
      </div>

    </div>
  </article>
</BaseLayout>
