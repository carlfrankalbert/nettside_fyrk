---
import BaseLayout from '../layouts/BaseLayout.astro';
import { spacingClasses, buttonClasses, textClasses, backgroundClasses, cn } from '../utils/classes';
---

<BaseLayout title="Noe gikk galt" description="Beklager, det oppstod en feil.">
  <section class={cn('py-24', backgroundClasses.white)} aria-labelledby="error-heading">
    <div class={cn(spacingClasses.container, 'text-center')}>
      <div class="max-w-2xl mx-auto">
        <p class="text-6xl font-bold text-brand-cyan-darker dark:text-brand-cyan mb-4" aria-hidden="true">500</p>
        <h1 id="error-heading" class={cn('text-h1 mb-4', textClasses.primary)}>Noe gikk galt</h1>
        <p class={cn('text-lg mb-8', textClasses.secondary)}>
          Beklager, det oppstod en teknisk feil. Pr√∏v igjen senere.
        </p>
        <a href="/" class={buttonClasses.primary}>
          Tilbake til forsiden
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

