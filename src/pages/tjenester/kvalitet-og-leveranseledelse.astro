---
/**
 * Kvalitet og leveranseledelse service page
 * Secondary service offering from FYRK
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/ui/Breadcrumb.astro';
import { kvalitetContent as content, serviceContactCTA } from '../../data/tjenester';

const breadcrumbItems = [
  { label: 'Tjenester', href: '/tjenester' },
  { label: content.header.title },
];
---

<BaseLayout
  title={content.seo.title}
  description={content.seo.description}
>
  <article class="py-16 md:py-24 px-6">
    <div class="max-w-3xl mx-auto">
      <Breadcrumb items={breadcrumbItems} />

      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-h3 sm:text-h2 md:text-h1 font-semibold text-brand-navy mb-4 leading-tight">
          {content.header.title}
        </h1>
        <p class="text-xl md:text-2xl text-neutral-600 leading-relaxed">
          {content.header.subtitle}
        </p>
      </header>

      <!-- Når dette er aktuelt -->
      <section class="mb-12">
        <h2 class="text-h3 font-semibold text-brand-navy mb-6">
          {content.whenRelevant.heading}
        </h2>
        <ul class="space-y-4 text-neutral-700">
          {content.whenRelevant.items.map((item) => (
            <li class="flex items-start gap-3">
              <span class="text-brand-navy font-semibold">•</span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </section>

      <!-- Hva jeg tar ansvar for -->
      <section class="mb-12">
        <h2 class="text-h3 font-semibold text-brand-navy mb-6">
          {content.responsibilities.heading}
        </h2>
        <ul class="space-y-4 text-neutral-700">
          {content.responsibilities.items.map((item) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-brand-navy flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
        <p class="mt-6 text-neutral-700">
          {content.responsibilities.footnote}
        </p>
      </section>

      <!-- Oppstart -->
      <section class="mb-12">
        <h2 class="text-h3 font-semibold text-brand-navy mb-6">
          {content.onboarding.heading}
        </h2>
        <ol class="space-y-6 text-neutral-700">
          {content.onboarding.steps.map((step, i) => (
            <li class="flex items-start gap-4">
              <span class="flex-shrink-0 w-8 h-8 bg-brand-navy text-white rounded-full flex items-center justify-center text-sm font-semibold">{i + 1}</span>
              <div>
                <p class="font-semibold text-brand-navy mb-1">{step.title}</p>
                <p>{step.description}</p>
              </div>
            </li>
          ))}
        </ol>
      </section>

      <!-- What this is NOT -->
      <section class="mb-12">
        <h2 class="text-h3 font-semibold text-brand-navy mb-6">
          {content.whatThisIsNot.heading}
        </h2>
        <ul class="space-y-4 text-neutral-700">
          {content.whatThisIsNot.items.map((item) => (
            <li class="flex items-start gap-3">
              <span class="text-brand-navy font-semibold">•</span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </section>

      <!-- FAQ -->
      <section class="mb-12">
        <h2 class="text-h3 font-semibold text-brand-navy mb-6">
          {content.faq.heading}
        </h2>
        <div class="space-y-6">
          {content.faq.items.map((item) => (
            <div class:list={[!('isLast' in item && item.isLast) && 'border-b border-neutral-200', 'pb-6']}>
              <h3 class="font-semibold text-brand-navy mb-2">{item.question}</h3>
              <p class="text-neutral-700">{item.answer}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Internal link -->
      <section class="mb-12">
        <p class="text-neutral-700" set:html={content.internalLinkHtml} />
      </section>

      <!-- CTA -->
      <section class="p-8 bg-white rounded-xl border border-neutral-200 text-center shadow-sm">
        <h2 class="text-h3 font-semibold text-brand-navy mb-4">
          {serviceContactCTA.heading}
        </h2>
        <p class="text-neutral-700 mb-6">
          {serviceContactCTA.body}
        </p>
        <a
          href={serviceContactCTA.buttonHref}
          class="btn btn-primary no-underline"
        >
          {serviceContactCTA.buttonLabel}
        </a>
        <p class="text-sm text-neutral-500 mt-6">
          {serviceContactCTA.disclaimer} <a href={serviceContactCTA.privacyLink.href} class="underline hover:text-brand-navy">{serviceContactCTA.privacyLink.label}</a>.
        </p>
      </section>
    </div>
  </article>
</BaseLayout>
