---
import MinimalLayout from '../../layouts/MinimalLayout.astro';
import PreMortemBrief from '../../components/PreMortemBrief';
import ToolFooter from '../../components/ui/ToolFooter.astro';
import Breadcrumb from '../../components/ui/Breadcrumb.astro';
import ToolWhenToUse from '../../components/ui/ToolWhenToUse.astro';
import ToolBenefits from '../../components/ui/ToolBenefits.astro';

export const prerender = false;

const breadcrumbItems = [
  { label: 'Verktøy', href: '/verktoy' },
  { label: 'Pre-Mortem Brief' },
];
---

<MinimalLayout
  title="Pre-Mortem Brief - Tenk gjennom hva som kan gå galt"
  description="Gratis verktøy som hjelper deg å identifisere failure modes, tidlige indikatorer og stopp-kriterier før du tar irreversible beslutninger."
  toolName="Pre-Mortem Brief"
>
  <main id="main-content" class="min-h-screen flex flex-col bg-neutral-50 text-neutral-700">
    <div class="flex-1 max-w-2xl mx-auto px-4 sm:px-6 py-8 md:py-12 w-full pb-24 md:pb-12">

      <Breadcrumb items={breadcrumbItems} />

      <!-- Hero: Clear value proposition -->
      <header class="mb-8" id="skriv">
        <h1 class="text-h3 md:text-h2 font-semibold text-brand-navy mb-3 leading-tight">
          Hva kan gå galt?
        </h1>
        <p class="text-base text-neutral-600 leading-relaxed mb-4">
          Beskriv en beslutning du vurderer. AI-en hjelper deg å tenke gjennom failure modes, tidlige varselsignaler og kriterier for når du bør stoppe - før det er for sent.
        </p>

        <p class="text-xs text-neutral-500">
          Ingen registrering · Ingen lagring · Bare klarhet
        </p>
      </header>

      <!-- When to use this? -->
      <ToolWhenToUse items={[
        'Før du forplikter deg til en større beslutning som er vanskelig å reversere',
        'Når teamet er enige, men ingen har spurt "hva om vi tar feil?"',
        'I styremøter og ledergrupper for å dokumentere risikovurdering',
        'Når du vil ha konkrete kriterier for når du bør evaluere eller avbryte',
      ]} />

      <ToolBenefits
        items={[
          '5-6 konkrete failure modes med konsekvenskategori',
          'Tidlige varselsignaler du kan overvåke',
          'Stopp-kriterier for PAUSE og FULL TILBAKETREKKING',
          'Forslag til eierskap og ansvar',
        ]}
        footnote="Ingen anbefaling om hva du bør gjøre. Bare strukturert risikotenkning."
      />

      <!-- Dynamic content (input, CTA, result) -->
      <div class="mt-8">
        <PreMortemBrief client:load />
      </div>

    </div>

    <ToolFooter />
  </main>

  <!-- Mobile sticky bottom bar -->
  <div class="md:hidden fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-neutral-200 px-4 py-3 safe-area-inset-bottom" id="mobile-cta-bar">
    <button
      type="button"
      id="mobile-submit-btn"
      class="w-full inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-white bg-brand-navy rounded-lg hover:bg-brand-navy/90 focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 disabled:bg-neutral-200 disabled:text-neutral-400 disabled:cursor-not-allowed transition-all"
      disabled
    >
      <span>Generer Pre-Mortem Brief</span>
    </button>
  </div>

  <script>
    import { initPageViewTracking } from '../../scripts/pageview-tracking';
    import { initTrackingHelpers } from '../../scripts/tracking-exclusion';
    initPageViewTracking('premortem');
    initTrackingHelpers();

    // Sync mobile CTA with main form
    const mobileBtn = document.getElementById('mobile-submit-btn') as HTMLButtonElement | null;
    const mobileCTABar = document.getElementById('mobile-cta-bar');

    if (mobileBtn && mobileCTABar) {
      // Listen for custom events from React component
      window.addEventListener('premortem:inputChange', ((e: CustomEvent) => {
        const { isValid, isLoading, hasResult } = e.detail;
        mobileBtn.disabled = isLoading || !isValid;

        // Hide bar when result is shown
        if (hasResult) {
          mobileCTABar.classList.add('translate-y-full');
        } else {
          mobileCTABar.classList.remove('translate-y-full');
        }

        // Update button text for loading state
        if (isLoading) {
          mobileBtn.innerHTML = `
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" aria-hidden="true">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Genererer brief...</span>
          `;
        } else {
          mobileBtn.innerHTML = `<span>Generer Pre-Mortem Brief</span>`;
        }
      }) as EventListener);

      // Forward click to main form
      mobileBtn.addEventListener('click', () => {
        window.dispatchEvent(new CustomEvent('premortem:submit'));
      });
    }

  </script>

  <style>
    /* Safe area for mobile devices with home indicator */
    .safe-area-inset-bottom {
      padding-bottom: max(1.25rem, env(safe-area-inset-bottom));
    }

    /* Smooth transition for mobile bar */
    #mobile-cta-bar {
      transition: transform 0.3s ease-out;
    }
  </style>
</MinimalLayout>
