---
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  // This would typically fetch from a CMS or markdown files
  return [
    { params: { slug: 'velkommen-til-bloggen' } },
  ];
}

const { slug } = Astro.params;

// This would typically fetch from a CMS or markdown files
const post = {
  slug: 'velkommen-til-bloggen',
  title: 'Velkommen til Fyrk-bloggen',
  date: '2025-01-15',
  content: `
    <p class="text-lg text-neutral-700 leading-relaxed mb-6">
      Velkommen til Fyrk-bloggen! Her vil vi dele innsikt, erfaringer og tanker om produktledelse, kvalitet og smidig utvikling.
    </p>
    <p class="text-neutral-700 leading-relaxed mb-6">
      Vi ser frem til å dele vår kunnskap med dere og håper at innholdet vil være nyttig for dere som jobber med produktutvikling, kvalitetssikring og teamledelse.
    </p>
    <p class="text-neutral-700 leading-relaxed">
      Hold øye med denne siden for nye innlegg!
    </p>
  `,
};

if (!post) {
  return Astro.redirect('/blogg');
}
---

<BaseLayout 
  title={post.title}
  description={`Les ${post.title} på Fyrk-bloggen.`}
>
  <article class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <a 
          href="/blogg"
          class="inline-flex items-center gap-2 text-brand-cyan-darker hover:text-brand-cyan mb-8 font-medium transition-colors duration-fast"
        >
          ← Tilbake til blogg
        </a>
        
        <header class="mb-8">
          <h1 class="text-h1 mb-4">{post.title}</h1>
          <time 
            datetime={post.date}
            class="text-neutral-500 text-sm"
          >
            {new Date(post.date).toLocaleDateString('no-NO', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
        </header>

        <div 
          class="prose prose-lg max-w-none"
          set:html={post.content}
        />
      </div>
    </div>
  </article>
</BaseLayout>

