---
import ToolLayout from '../layouts/ToolLayout.astro';
import BeslutningsloggForm from '../components/Beslutningslogg';
import { beslutningsloggTool } from '../data/tools';

const { seo, toolName, breadcrumbLabel, showClaude, h1, badge, subtitle, tagline, whenToUse, benefits, relatedTools, mobileCTA } = beslutningsloggTool.page;
---

<ToolLayout
  title={seo.title}
  description={seo.description}
  toolName={toolName}
  breadcrumbLabel={breadcrumbLabel}
  showClaude={showClaude}
  whenToUse={whenToUse}
  benefits={benefits}
  relatedTools={relatedTools}
  mobileCTA={mobileCTA}
>
  <header slot="hero" class="mb-8" id="skriv">
    <h1 class="text-h3 md:text-h2 font-semibold text-brand-navy mb-3 leading-tight">
      {h1}
      <span class="inline-block text-xs font-medium text-amber-700 bg-amber-100 px-2 py-0.5 rounded-full align-middle ml-2">{badge}</span>
    </h1>
    <p class="text-base text-neutral-600 leading-relaxed mb-4">
      {subtitle}
    </p>

    <p class="text-xs text-neutral-500">
      {tagline}
    </p>

  </header>

  <BeslutningsloggForm client:load />
</ToolLayout>

<script>
  import { initPageViewTracking } from '../scripts/pageview-tracking';
  import { initTrackingHelpers } from '../scripts/tracking-exclusion';
  import { initMobileCTA } from '../scripts/mobile-cta';
  initPageViewTracking('beslutningslogg');
  initTrackingHelpers();
  initMobileCTA({
    toolName: 'beslutningslogg',
    buttonId: 'mobile-generate-btn',
    submitEvent: 'beslutningslogg:generate',
    isDisabled: (d) => !d.isValid,
    hideField: 'hasPreview',
    defaultHtml: '',
  });
</script>
