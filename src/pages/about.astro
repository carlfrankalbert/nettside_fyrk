---
/**
 * About page for FYRK
 * Standalone page with more detail about the founder and company
 */
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import carlJohnsonImage from '../assets/images/carl-johnson.png';
import { aboutPageContent } from '../data/about';

const { seo, heading, intro, founder, ctaHref, ctaLabel } = aboutPageContent;

const breadcrumbItems = [
  { label: heading },
];
---

<BaseLayout
  title={seo.title}
  description={seo.description}
>
  <article class="py-16 md:py-24 px-6">
    <div class="max-w-3xl mx-auto">
      <Breadcrumb items={breadcrumbItems} />

      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-h2 md:text-h1 font-semibold text-brand-navy mb-4 leading-tight">
          {heading}
        </h1>
      </header>

      <!-- Main content -->
      <section class="mb-12 space-y-6 text-lg text-neutral-700 leading-relaxed">
        {intro.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </section>

      <!-- Founder section -->
      <section class="mb-12 bg-white rounded-xl p-8 border border-neutral-100 shadow-sm">
        <div class="flex flex-col md:flex-row gap-6 mb-6">
          <div class="flex-shrink-0">
            <Image
              src={carlJohnsonImage}
              alt="Carl Johnson"
              width={128}
              height={128}
              class="w-24 h-24 md:w-32 md:h-32 rounded-xl object-cover grayscale"
              loading="lazy"
            />
          </div>
          <div class="flex-1">
            <h2 class="text-h4 font-semibold text-brand-navy mb-4">
              {founder.name}
            </h2>
            <div class="text-neutral-600 space-y-4">
              {founder.paragraphs.map((paragraph) => (
                <p>{paragraph}</p>
              ))}
            </div>
          </div>
        </div>

        <!-- Experience -->
        <div class="border-t border-neutral-100 pt-6 mb-6">
          <p class="text-neutral-600" set:html={founder.experienceHtml} />
        </div>

        <!-- LinkedIn -->
        <p class="text-sm text-neutral-500 text-center">
          <a
            href={founder.linkedinCta.href}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 hover:text-brand-navy transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 3A2 2 0 0 1 21 5V19A2 2 0 0 1 19 21H5A2 2 0 0 1 3 19V5A2 2 0 0 1 5 3H19M18.5 18.5V13.2A3.26 3.26 0 0 0 15.24 9.94C14.39 9.94 13.4 10.46 12.92 11.24V10.13H10.13V18.5H12.92V13.57C12.92 12.8 13.54 12.17 14.31 12.17A1.4 1.4 0 0 1 15.71 13.57V18.5H18.5M6.88 8.56A1.68 1.68 0 0 0 8.56 6.88C8.56 5.95 7.81 5.19 6.88 5.19A1.69 1.69 0 0 0 5.19 6.88C5.19 7.81 5.95 8.56 6.88 8.56M8.27 18.5V10.13H5.5V18.5H8.27Z"/>
            </svg>
            {founder.linkedinCta.text}
          </a>
        </p>
      </section>

      <!-- CTA -->
      <section class="text-center">
        <a
          href={ctaHref}
          class="btn btn-primary no-underline"
        >
          {ctaLabel}
        </a>
      </section>
    </div>
  </article>
</BaseLayout>
