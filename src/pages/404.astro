---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Side ikke funnet" description="Beklager, siden du leter etter finnes ikke.">
  <section class="py-24 bg-white" aria-labelledby="error-heading">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <p class="text-6xl font-bold text-brand-cyan mb-4" aria-hidden="true">404</p>
        <h1 id="error-heading" class="text-h1 mb-4">Side ikke funnet</h1>
        <p class="text-lg text-neutral-500 mb-8">
          Beklager, siden du leter etter finnes ikke eller har blitt flyttet.
        </p>
        <a href="/" class="btn btn-primary">
          Tilbake til forsiden
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

