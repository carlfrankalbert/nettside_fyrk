---
// Redirect all 404s to landing page
import '../styles/global.css';
import LandingLogo from '../components/ui/LandingLogo.astro';
import SEOHead from '../components/seo/SEOHead.astro';
import { SITE_CONFIG } from '../config/site';
---

<!doctype html>
<html lang="no">
  <head>
    <SEOHead 
      title={SITE_CONFIG.name}
      description={SITE_CONFIG.description}
      type="website"
    />
    <meta http-equiv="refresh" content="0; url=/" />
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-b from-neutral-50 to-white dark:from-neutral-900 dark:to-neutral-800 flex items-center justify-center px-4">
      <div class="w-full max-w-2xl mx-auto text-center flex flex-col items-center justify-center">
        <LandingLogo />
      </div>
    </div>
    <script>
      // Client-side redirect as fallback
      window.location.href = '/';
    </script>
  </body>
</html>
