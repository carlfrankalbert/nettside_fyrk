---
import MinimalLayout from '../layouts/MinimalLayout.astro';
import KonseptSpeil from '../components/KonseptSpeil';

export const prerender = false;
---

<MinimalLayout
  title="Konseptspeilet | FYRK"
  description="Test konseptet ditt før du bygger. Få et strukturert speil tilbake på 30 sekunder."
>
  <main id="main-content" class="min-h-screen flex flex-col bg-neutral-50 text-neutral-700">
    <div class="flex-1 max-w-2xl mx-auto px-4 sm:px-6 py-8 md:py-12 w-full pb-24 md:pb-12">

      <!-- Hero: Reframed to emphasize reflection, not assessment -->
      <header class="mb-8" id="skriv">
        <h1 class="text-h3 md:text-h2 font-semibold text-brand-navy mb-3 leading-tight">
          Se hva du tar for gitt
        </h1>
        <p class="text-base text-neutral-600 leading-relaxed mb-6">
          Beskriv en tidlig idé – og få et speil som viser hva som er antatt vs. hva som er gjort eksplisitt.
        </p>

        <!-- Value proposition box - reframed for reflection -->
        <div class="p-4 bg-white border border-neutral-200 rounded-xl space-y-2">
          <div class="flex items-start gap-2 text-sm text-neutral-700">
            <span class="text-neutral-400 shrink-0">•</span>
            <span>Avdekker antagelser du kanskje ikke ser selv</span>
          </div>
          <div class="flex items-start gap-2 text-sm text-neutral-700">
            <span class="text-neutral-400 shrink-0">•</span>
            <span>Viser hull i beskrivelsen – ikke hull i ideen</span>
          </div>
          <div class="flex items-start gap-2 text-sm text-neutral-700">
            <span class="text-neutral-400 shrink-0">•</span>
            <span>Hjelper deg tenke høyt uten å bli evaluert</span>
          </div>
        </div>

      </header>

      <!-- Dynamic content (input, CTA, result) -->
      <div class="mt-8">
        <KonseptSpeil client:load />
      </div>

      <!-- When is this useful section -->
      <section class="mt-8 pt-6 border-t border-neutral-200">
        <details class="group">
          <summary class="flex items-center justify-between cursor-pointer py-2 text-sm font-medium text-neutral-600 hover:text-neutral-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-cyan-darker focus-visible:ring-offset-2 rounded-lg list-none">
            <span>Når er dette nyttig?</span>
            <svg class="w-4 h-4 text-neutral-400 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </summary>
          <div class="mt-3 space-y-2 text-sm text-neutral-600">
            <div class="flex items-start gap-2">
              <span class="text-neutral-400 shrink-0">•</span>
              <span>Før du presenterer en idé, for å forstå hvilke spørsmål som kan komme</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="text-neutral-400 shrink-0">•</span>
              <span>Når du vil tenke høyt i en tidlig fase uten å forplikte deg</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="text-neutral-400 shrink-0">•</span>
              <span>Når du vil skille mellom det du faktisk vet og det du tror</span>
            </div>
            <div class="flex items-start gap-2">
              <span class="text-neutral-400 shrink-0">•</span>
              <span>Som forberedelse til samtaler med kolleger, ledere eller interessenter</span>
            </div>
          </div>
        </details>
      </section>

    </div>

    <footer class="py-6 border-t border-neutral-200 text-center text-sm text-neutral-500">
      <p>Laget av <a href="https://fyrk.no" class="text-brand-navy hover:text-brand-cyan-darker underline underline-offset-2 font-medium focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 rounded">FYRK</a> · Drevet av <a href="https://www.anthropic.com/claude" target="_blank" rel="noopener noreferrer" class="text-brand-navy hover:text-brand-cyan-darker underline underline-offset-2 font-medium focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 rounded">Claude</a></p>
    </footer>
  </main>

  <!-- Mobile sticky bottom bar -->
  <div class="md:hidden fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-neutral-200 px-4 py-3 safe-area-inset-bottom" id="mobile-cta-bar">
    <button
      type="button"
      id="mobile-submit-btn"
      class="w-full inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-white bg-brand-navy rounded-lg hover:bg-brand-navy/90 focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 disabled:bg-neutral-200 disabled:text-neutral-400 disabled:cursor-not-allowed transition-all"
      disabled
    >
      <span>Avdekk antagelser</span>
      <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </button>
  </div>

  <script>
    import { initPageViewTracking } from '../scripts/pageview-tracking';
    import { initTrackingHelpers } from '../scripts/tracking-exclusion';
    initPageViewTracking('konseptspeil');
    initTrackingHelpers();

    // Sync mobile CTA with main form
    const mobileBtn = document.getElementById('mobile-submit-btn') as HTMLButtonElement | null;
    const mobileCTABar = document.getElementById('mobile-cta-bar');

    if (mobileBtn && mobileCTABar) {
      // Listen for custom events from React component
      window.addEventListener('konseptspeil:inputChange', ((e: CustomEvent) => {
        const { length, isLoading, hasResult } = e.detail;
        mobileBtn.disabled = isLoading || length < 50;

        // Hide bar when result is shown
        if (hasResult) {
          mobileCTABar.classList.add('translate-y-full');
        } else {
          mobileCTABar.classList.remove('translate-y-full');
        }

        // Update button text for loading state
        if (isLoading) {
          mobileBtn.innerHTML = `
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Speiler tankene dine…</span>
          `;
        } else {
          mobileBtn.innerHTML = `
            <span>Avdekk antagelser</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          `;
        }
      }) as EventListener);

      // Forward click to main form
      mobileBtn.addEventListener('click', () => {
        window.dispatchEvent(new CustomEvent('konseptspeil:submit'));
      });
    }

  </script>

  <style>
    /* Safe area for mobile devices with home indicator */
    .safe-area-inset-bottom {
      padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
    }

    /* Smooth transition for mobile bar */
    #mobile-cta-bar {
      transition: transform 0.3s ease-out;
    }
  </style>
</MinimalLayout>
