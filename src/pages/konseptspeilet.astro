---
import MinimalLayout from '../layouts/MinimalLayout.astro';
import KonseptSpeil from '../components/KonseptSpeil';

export const prerender = false;
---

<MinimalLayout
  title="Test og forbedre produktidéer – avdekk antakelser tidlig"
  description="Gratis verktøy for å teste og forbedre produktidéer. Avdekker skjulte antakelser og hull i tidlige konsepter – på 1 min, uten registrering."
  toolName="Konseptspeilet"
>
  <main id="main-content" class="min-h-screen flex flex-col bg-neutral-50 text-neutral-700">
    <div class="flex-1 max-w-2xl mx-auto px-4 sm:px-6 py-8 md:py-12 w-full pb-24 md:pb-12">

      <!-- Hero: Clear value proposition -->
      <header class="mb-8" id="skriv">
        <h1 class="text-h3 md:text-h2 font-semibold text-brand-navy mb-3 leading-tight">
          Forstå ideen din bedre – før noen andre gjør det
        </h1>
        <p class="text-base text-neutral-600 leading-relaxed mb-4">
          Skriv inn ideen din. AI-en analyserer teksten og avslører blindsoner, manglende logikk og skjulte antakelser på sekunder.
        </p>

        <p class="text-xs text-neutral-500">
          Ingen registrering · Ingen salg · Faktisk nyttig
        </p>

      </header>

      <!-- Når bør du bruke dette? -->
      <section class="mb-8 p-4 bg-white border border-neutral-200 rounded-xl">
        <h2 class="text-base font-semibold text-brand-navy mb-3">Når bør du bruke dette?</h2>
        <ul class="text-neutral-600 space-y-2 text-sm">
          <li class="flex items-start gap-2">
            <span class="text-brand-cyan-darker shrink-0">•</span>
            <span>Når du har en produktidé, men er usikker på om den holder</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-brand-cyan-darker shrink-0">•</span>
            <span>Før du pitcher en idé internt eller eksternt</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-brand-cyan-darker shrink-0">•</span>
            <span>I tidlig produkt discovery / konseptfase</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-brand-cyan-darker shrink-0">•</span>
            <span>Når du vil få feedback uten møter, konsulenter eller bias</span>
          </li>
        </ul>
      </section>

      <!-- Hva får du tilbake? -->
      <section class="mb-8 p-4 bg-feedback-success-light border border-feedback-success/30 rounded-xl">
        <h2 class="text-base font-semibold text-brand-navy mb-3">Hva får du tilbake?</h2>
        <ul class="text-neutral-700 space-y-2 text-sm">
          <li class="flex items-start gap-2">
            <span class="text-feedback-success shrink-0">✓</span>
            <span>Feedback på hva som er antatt vs eksplisitt formulert</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-feedback-success shrink-0">✓</span>
            <span>Avdekking av typiske hull: målgruppe, verdi, effekt, KPI</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-feedback-success shrink-0">✓</span>
            <span>Et bedre beslutningsgrunnlag før videre arbeid</span>
          </li>
        </ul>
        <p class="text-sm text-neutral-500 italic mt-4">
          Ingen scoring. Ingen fasit. Bare et ærlig speil.
        </p>
      </section>

      <!-- Dynamic content (input, CTA, result) -->
      <div class="mt-8">
        <KonseptSpeil client:load />
      </div>

      <!-- Kontakt -->
      <section class="pt-6 border-t border-neutral-200">
        <div class="flex flex-col sm:flex-row sm:items-center gap-3">
          <span class="text-sm text-neutral-600">Vil du ha et menneskelig blikk i tillegg?</span>
          <a
            href="mailto:hei@fyrk.no"
            class="inline-flex items-center gap-2 px-4 py-2 text-sm text-brand-navy hover:text-white hover:bg-brand-navy border-2 border-brand-navy rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Ta kontakt
          </a>
        </div>
        <p class="text-xs text-neutral-500 mt-4">
          Konseptspeilet er laget av FYRK som supplement til rådgivning.
        </p>
      </section>

    </div>

    <footer class="py-6 border-t border-neutral-200 text-center text-sm text-neutral-500">
      <p>Laget av <a href="https://fyrk.no" class="text-brand-navy hover:text-brand-cyan-darker underline underline-offset-2 font-medium focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 rounded">FYRK</a> · Drevet av <a href="https://www.anthropic.com/claude" target="_blank" rel="noopener noreferrer" class="text-brand-navy hover:text-brand-cyan-darker underline underline-offset-2 font-medium focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 rounded">Claude</a> · <a href="/personvern" class="text-brand-navy hover:text-brand-cyan-darker underline underline-offset-2 font-medium focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 rounded">Personvern</a></p>
    </footer>
  </main>

  <!-- Mobile sticky bottom bar -->
  <div class="md:hidden fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-neutral-200 px-4 py-3 safe-area-inset-bottom" id="mobile-cta-bar">
    <button
      type="button"
      id="mobile-submit-btn"
      class="w-full inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-white bg-brand-navy rounded-lg hover:bg-brand-navy/90 focus:outline-none focus:ring-2 focus:ring-brand-cyan-darker focus:ring-offset-2 disabled:bg-neutral-200 disabled:text-neutral-400 disabled:cursor-not-allowed transition-all"
      disabled
    >
      <span>Start speiling</span>
    </button>
  </div>

  <script>
    import { initPageViewTracking } from '../scripts/pageview-tracking';
    import { initTrackingHelpers } from '../scripts/tracking-exclusion';
    initPageViewTracking('konseptspeil');
    initTrackingHelpers();

    // Sync mobile CTA with main form
    const mobileBtn = document.getElementById('mobile-submit-btn') as HTMLButtonElement | null;
    const mobileCTABar = document.getElementById('mobile-cta-bar');

    if (mobileBtn && mobileCTABar) {
      // Listen for custom events from React component
      window.addEventListener('konseptspeil:inputChange', ((e: CustomEvent) => {
        const { length, isLoading, hasResult } = e.detail;
        mobileBtn.disabled = isLoading || length < 50;

        // Hide bar when result is shown
        if (hasResult) {
          mobileCTABar.classList.add('translate-y-full');
        } else {
          mobileCTABar.classList.remove('translate-y-full');
        }

        // Update button text for loading state
        if (isLoading) {
          mobileBtn.innerHTML = `
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Speiler tankene dine…</span>
          `;
        } else {
          mobileBtn.innerHTML = `<span>Start speiling</span>`;
        }
      }) as EventListener);

      // Forward click to main form
      mobileBtn.addEventListener('click', () => {
        window.dispatchEvent(new CustomEvent('konseptspeil:submit'));
      });
    }

  </script>

  <style>
    /* Safe area for mobile devices with home indicator */
    .safe-area-inset-bottom {
      padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
    }

    /* Smooth transition for mobile bar */
    #mobile-cta-bar {
      transition: transform 0.3s ease-out;
    }
  </style>
</MinimalLayout>
