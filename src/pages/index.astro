---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Section from '../components/Section.astro';
import CTASection from '../components/CTASection.astro';
import FeatureList from '../components/FeatureList.astro';
import { services } from '../data/services';
import { targetAudience } from '../data/targetAudience';
---

<BaseLayout 
  title="Hjem" 
  description="Fyrk leverer produktledelse som leverer forretningsverdi. Med erfaring fra fintech og smidige leveransemiljøer hjelper vi selskaper å bygge digitale produkter som faktisk holder mål."
>
  <!-- Hero Section -->
  <Section background="gradient" ariaLabelledBy="hero-heading">
    <div class="max-w-4xl mx-auto text-center">
      <h1 id="hero-heading" class="text-display font-bold text-brand-navy mb-8 leading-tight">
        Produktledelse som leverer forretningsverdi
      </h1>
      <p class="text-xl text-neutral-700 mb-10 leading-relaxed max-w-[65ch] mx-auto">
        Vi hjelper organisasjoner å få mennesker, prosesser og teknologi til å virke sammen for å skape produkter som virker – raskt, trygt og med reell brukerverdi.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/kontakt" class="btn btn-primary text-lg px-8" aria-label="Snakk med oss fra Fyrk">
          Snakk med oss
        </a>
        <a href="/om" class="btn btn-outline text-lg px-8" aria-label="Les mer om Fyrk">
          Les mer om oss
        </a>
      </div>
    </div>
  </Section>

  <!-- Services Section -->
  <Section background="white" ariaLabelledBy="services-heading">
    <div class="text-center mb-20">
      <h2 id="services-heading" class="text-h2 mb-6">Hva vi tilbyr</h2>
      <p class="text-lg text-neutral-700 dark:text-neutral-300 max-w-[65ch] mx-auto">
        Vi leverer produktledelse som leverer, teambygging og trygg leveranse for organisasjoner som trenger både hastighet og soliditet.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-[2fr_1fr_1fr] gap-8 md:gap-12 max-w-6xl mx-auto">
      {services.map((service) => (
        <ServiceCard
          icon={service.icon}
          title={service.title}
          description={service.description}
        />
      ))}
    </div>
  </Section>

  <!-- Who We Help Section -->
  <Section background="neutral" ariaLabelledBy="who-we-help-heading">
    <FeatureList 
      heading="Passer for selskaper som:" 
      items={targetAudience}
      headingId="who-we-help-heading"
    />
  </Section>

  <!-- CTA Section -->
  <CTASection
    heading="Klar til å starte?"
    description="Ta kontakt for å høre hvordan vi kan hjelpe ditt selskap med produktledelse som faktisk leverer resultater."
    buttonText="Snakk med oss"
    buttonHref="/kontakt"
    buttonAriaLabel="Snakk med oss fra Fyrk"
    variant="secondary"
  />
</BaseLayout>
