---
import '../styles/global.css';

const site = 'https://fyrk.no';
const title = 'Fyrk';
const description = 'Fyrk leverer produktledelse der kvalitet møter forretningsverdi.';
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/fyrk-monogram-primary-navy.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Fyrk" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={site} />
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-b from-neutral-50 to-white flex items-center justify-center px-4">
      <div class="max-w-2xl mx-auto text-center">
        <!-- Logo -->
        <div class="mb-12">
          <img 
            src="/fyrk-logo-primary-navy.svg" 
            alt="Fyrk logo" 
            class="h-16 md:h-20 mx-auto"
            width="200"
            height="56"
          />
        </div>
        
        <!-- Coming Soon Text -->
        <h1 class="text-3xl md:text-4xl font-bold text-brand-navy mb-6 font-primary">
          Vi er snart tilbake
        </h1>
        
        <p class="text-lg md:text-xl text-neutral-700 mb-12 leading-relaxed max-w-[65ch] mx-auto">
          Vi bygger noe nytt. Ta kontakt hvis du vil høre mer.
        </p>
        
        <!-- Contact -->
        <div class="flex flex-col items-center gap-6">
          <a 
            href="mailto:hei@fyrk.no" 
            class="text-2xl md:text-3xl font-medium text-brand-cyan-darker hover:text-brand-cyan transition-colors duration-fast font-primary focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1"
            aria-label="Send e-post til hei@fyrk.no"
          >
            hei@fyrk.no
          </a>
          
          <!-- Decorative element -->
          <div class="flex gap-2 mt-4" aria-hidden="true">
            <div class="w-3 h-3 bg-brand-cyan rounded-full"></div>
            <div class="w-3 h-3 bg-brand-cyan-light rounded-full"></div>
            <div class="w-3 h-3 bg-brand-cyan-lighter rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
