---
import '../styles/global.css';

const site = 'https://fyrk.no';
const title = 'Fyrk';
const description = 'Fyrk leverer produktledelse der kvalitet m√∏ter forretningsverdi.';
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/fyrk-monogram-primary-navy.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Fyrk" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Canonical -->
    <link rel="canonical" href={site} />
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-b from-brand-navy via-brand-cyan-darker to-brand-cyan flex items-center justify-center px-4">
      <div class="max-w-2xl mx-auto text-center flex flex-col justify-between min-h-screen py-12">
        <!-- Top spacer -->
        <div class="flex-1"></div>
        
        <!-- Middle spacer -->
        <div class="flex-1"></div>
        
        <!-- Bottom third with email -->
        <div class="flex-1 flex items-end justify-center pb-12">
          <a 
            href="mailto:hei@fyrk.no" 
            class="text-2xl md:text-3xl font-medium text-white hover:text-brand-cyan-light transition-colors duration-fast font-primary focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-brand-navy rounded-md px-2 py-1"
            aria-label="Send e-post til hei@fyrk.no"
          >
            hei@fyrk.no
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
