---
import '../styles/global.css';

const site = 'https://fyrk.no';
const title = 'Fyrk';
const description = 'Fyrk leverer produktledelse der kvalitet m√∏ter forretningsverdi.';
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/fyrk-monogram-primary-navy.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site} />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content="Fyrk" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Canonical -->
    <link rel="canonical" href={site} />
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-b from-neutral-50 to-white flex items-center justify-center px-4">
      <div class="max-w-2xl mx-auto text-center flex flex-col items-center justify-center gap-8">
        <!-- Logo -->
        <div>
          <img 
            src="/fyrk-logo-primary-navy.svg" 
            alt="Fyrk logo" 
            class="h-16 md:h-20 mx-auto"
            width="200"
            height="56"
          />
        </div>
        
        <!-- Contact -->
        <div>
          <a 
            href="mailto:hei@fyrk.no" 
            class="text-2xl md:text-3xl font-medium text-brand-cyan-darker hover:text-brand-cyan transition-colors duration-fast font-primary focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1 block"
            aria-label="Send e-post til hei@fyrk.no"
          >
            hei@fyrk.no
          </a>
        </div>
        
        <!-- Animated AI Icon -->
        <div class="ai-icon-container" aria-hidden="true">
          <svg 
            class="w-12 h-12 md:w-16 md:h-16 text-brand-cyan" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <!-- Brain/AI symbol -->
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
            />
          </svg>
        </div>
      </div>
    </div>
    
    <style>
      .ai-icon-container {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
      }
      
      @keyframes pulse {
        0%, 100% {
          opacity: 1;
          transform: scale(1);
        }
        50% {
          opacity: 0.7;
          transform: scale(1.1);
        }
      }
      
      @media (prefers-reduced-motion: reduce) {
        .ai-icon-container {
          animation: none;
        }
      }
    </style>
  </body>
</html>
