---
import ToolLayout from '../layouts/ToolLayout.astro';
import AntakelseskartComponent from '../components/Antakelseskart';
import { antakelseskartTool } from '../data/tools';

const { seo, toolName, breadcrumbLabel, h1, badge, subtitle, tagline, whenToUse, benefits, relatedTools, mobileCTA } = antakelseskartTool.page;
---

<ToolLayout
  title={seo.title}
  description={seo.description}
  toolName={toolName}
  breadcrumbLabel={breadcrumbLabel}
  whenToUse={whenToUse}
  benefits={benefits}
  relatedTools={relatedTools}
  mobileCTA={mobileCTA}
>
  <header slot="hero" class="mb-8" id="skriv">
    <h1 class="text-h3 md:text-h2 font-semibold text-brand-navy mb-3 leading-tight">
      {h1}
      <span class="inline-block text-xs font-medium text-amber-700 bg-amber-100 px-2 py-0.5 rounded-full align-middle ml-2">{badge}</span>
    </h1>
    <p class="text-base text-neutral-600 leading-relaxed mb-4">
      {subtitle}
    </p>

    <p class="text-xs text-neutral-500">
      {tagline}
    </p>
  </header>

  <AntakelseskartComponent client:load />
</ToolLayout>

<script>
  import { initPageViewTracking } from '../scripts/pageview-tracking';
  import { initTrackingHelpers } from '../scripts/tracking-exclusion';
  import { initMobileCTA } from '../scripts/mobile-cta';
  initPageViewTracking('antakelseskart');
  initTrackingHelpers();
  initMobileCTA({
    toolName: 'antakelseskart',
    isDisabled: (d) => !!d.isLoading || (d.length as number) < 50,
    loadingText: 'Avdekker antakelser...',
    defaultHtml: '<span>Avdekk antakelser</span>',
  });
</script>
