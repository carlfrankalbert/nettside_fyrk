---
import Logo from './Logo.astro';
---

<header class="sticky top-0 z-50 bg-white shadow-sm border-b border-neutral-200">
  <a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
  <nav class="container mx-auto px-4 py-4" aria-label="Hovednavigasjon">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md">
        <Logo variant="navy" class="h-10" />
        <span class="sr-only">Fyrk - Hjem</span>
      </a>
      
      <ul class="flex items-center gap-8" role="list">
        <li>
          <a 
            href="/" 
            class="font-primary font-medium text-brand-navy hover:text-brand-cyan-darker transition-colors duration-fast focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1"
          >
            Hjem
          </a>
        </li>
        <li>
          <a 
            href="/om" 
            class="font-primary font-medium text-brand-navy hover:text-brand-cyan-darker transition-colors duration-fast focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1"
          >
            Om oss
          </a>
        </li>
        <li>
          <a 
            href="/blogg" 
            class="font-primary font-medium text-brand-navy hover:text-brand-cyan-darker transition-colors duration-fast focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1"
          >
            Blogg
          </a>
        </li>
        <li>
          <a 
            href="/kontakt" 
            class="btn btn-primary"
          >
            Kontakt
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

