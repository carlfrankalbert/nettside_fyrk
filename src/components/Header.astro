---
import Logo from './Logo.astro';
import { mainNavigation } from '../data/navigation';
---

<header class="sticky top-0 z-50 bg-white shadow-sm border-b border-neutral-200" role="banner">
  <nav class="container mx-auto px-4 py-4" aria-label="Hovednavigasjon">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md">
        <Logo variant="navy" class="h-10" />
        <span class="sr-only">Fyrk - Hjem</span>
      </a>
      
      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-brand-navy focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md"
        aria-label="Åpne meny"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Desktop navigation -->
      <ul class="hidden md:flex items-center gap-8" role="list">
        {mainNavigation.map((item) => (
          <li>
            <a 
              href={item.href} 
              class={item.isPrimary 
                ? "btn btn-primary"
                : "font-primary font-medium text-brand-navy hover:text-brand-cyan-darker transition-colors duration-fast focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-1"
              }
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-neutral-200">
      <ul class="flex flex-col gap-3 pt-4" role="list">
        {mainNavigation.map((item) => (
          <li class={item.isPrimary ? "mt-2" : ""}>
            <a 
              href={item.href} 
              class={item.isPrimary
                ? "block w-full btn btn-primary text-center"
                : "block font-primary font-medium text-brand-navy hover:text-brand-cyan-darker transition-colors duration-fast focus-visible:ring-2 focus-visible:ring-brand-cyan focus-visible:ring-offset-2 rounded-md px-2 py-3"
              }
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', !isExpanded);
      mobileMenu.classList.toggle('hidden');
      
      // Update icon and aria-label
      const icon = menuButton.querySelector('svg');
      if (icon) {
        if (isExpanded) {
          // Show hamburger icon
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
          menuButton.setAttribute('aria-label', 'Åpne meny');
        } else {
          // Show close icon
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
          menuButton.setAttribute('aria-label', 'Lukk meny');
        }
      }
      
      // Focus management: when opening menu, focus first link
      if (!isExpanded) {
        const firstLink = mobileMenu.querySelector('a');
        if (firstLink) {
          setTimeout(() => firstLink.focus(), 100);
        }
      }
    });
  }
</script>

