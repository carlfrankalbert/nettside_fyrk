---
import Logo from '../ui/Logo.astro';
import { mainNavigation } from '../../data/navigation';
import { EXTERNAL_LINKS, linkClasses } from '../../utils/links';
---

<footer class="bg-brand-navy text-white mt-24" role="contentinfo">
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div>
        <Logo variant="white" class="h-8 mb-4" />
        <p class="text-neutral-100 leading-relaxed">
          Vi hjelper organisasjoner å få mennesker, prosesser og teknologi til å virke sammen for å skape produkter som virker.
        </p>
      </div>
      
      <div>
        <h3 class="font-primary font-semibold text-lg mb-4">Navigasjon</h3>
        <ul class="space-y-2" role="list">
          {mainNavigation.map((item) => (
            <li>
              <a 
                href={item.href} 
                class={linkClasses.footer}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-primary font-semibold text-lg mb-4">Kontakt</h3>
        <address class="not-italic text-neutral-100 leading-relaxed">
          <p>Oslo, Norge</p>
          <p class="mt-2">
            <a 
              href={EXTERNAL_LINKS.linkedin}
              target="_blank" 
              rel="noopener noreferrer"
              class={linkClasses.footer}
            >
              LinkedIn
            </a>
          </p>
          <p class="mt-2">
            <a 
              href={EXTERNAL_LINKS.site}
              class={linkClasses.footer}
            >
              fyrk.no
            </a>
          </p>
        </address>
      </div>
    </div>
    
    <div class="border-t border-neutral-500 mt-12 pt-8 text-center text-neutral-300 text-sm">
      <p>
        Fyrk {new Date().getFullYear()} · <a href="/personvern" class="hover:text-white underline underline-offset-2">Personvern</a> · <a href="/vilkar" class="hover:text-white underline underline-offset-2">Vilkår</a>
      </p>
    </div>
  </div>
</footer>

