---
import { cn } from '../utils/classes';

/**
 * Accent line decoration component
 * Used to add visual accent above headings
 * Subtle decorative element that doesn't look like navigation indicators
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={cn('flex items-center justify-center mb-8', className)} aria-hidden="true">
  <div class="h-px w-20 bg-gradient-to-r from-transparent via-brand-cyan/50 to-brand-cyan"></div>
  <div class="h-px w-20 bg-brand-cyan mx-2"></div>
  <div class="h-px w-20 bg-gradient-to-l from-transparent via-brand-cyan/50 to-brand-cyan"></div>
</div>

