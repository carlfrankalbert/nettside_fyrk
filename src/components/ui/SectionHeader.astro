---
import { textClasses, cn } from '../../utils/classes';

/**
 * Reusable section header component
 * Provides consistent styling for section headings and descriptions
 */
interface Props {
  heading: string;
  headingId: string;
  description?: string;
  headingLevel?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const {
  heading,
  headingId,
  description,
  headingLevel = 2,
  class: className = ''
} = Astro.props;

const headingClasses = {
  1: 'text-h1',
  2: 'text-h2 md:text-[2.75rem]',
  3: 'text-h3',
  4: 'text-h4',
  5: 'text-h5',
  6: 'text-h6',
};

const headingStyle = cn(headingClasses[headingLevel], 'mb-6 md:mb-8', textClasses.primary, 'font-bold tracking-tight');
---

<div class={cn('text-center', className)}>
  {headingLevel === 1 && <h1 id={headingId} class={headingStyle}>{heading}</h1>}
  {headingLevel === 2 && <h2 id={headingId} class={headingStyle}>{heading}</h2>}
  {headingLevel === 3 && <h3 id={headingId} class={headingStyle}>{heading}</h3>}
  {headingLevel === 4 && <h4 id={headingId} class={headingStyle}>{heading}</h4>}
  {headingLevel === 5 && <h5 id={headingId} class={headingStyle}>{heading}</h5>}
  {headingLevel === 6 && <h6 id={headingId} class={headingStyle}>{heading}</h6>}
  {description && (
    <p class={cn('text-lg md:text-xl', textClasses.secondary, 'max-w-[70ch] mx-auto leading-relaxed')}>
      {description}
    </p>
  )}
</div>

