---
import { backgroundClasses, spacingClasses, cn } from '../utils/classes';

interface Props {
  id?: string;
  ariaLabelledBy?: string;
  background?: 'white' | 'neutral' | 'navy' | 'gradient';
  padding?: 'normal' | 'large';
  class?: string;
}

const { 
  id,
  ariaLabelledBy,
  background = 'white',
  padding = 'normal',
  class: className = ''
} = Astro.props;

const backgroundClassMap = {
  white: backgroundClasses.white,
  neutral: backgroundClasses.neutral,
  navy: backgroundClasses.navy,
  gradient: backgroundClasses.gradient,
};

const paddingClassMap = {
  normal: spacingClasses.sectionNormal,
  large: spacingClasses.sectionLarge,
};
---

<section 
  id={id}
  class={cn(backgroundClassMap[background], paddingClassMap[padding], className)}
  aria-labelledby={ariaLabelledBy}
>
  <div class={spacingClasses.container}>
    <slot />
  </div>
</section>

