---
interface Props {
  icon: 'checkmark' | 'team' | 'shield';
  title: string;
  description: string;
  featured?: boolean;
}

const { icon, title, description, featured = false } = Astro.props;

const iconPaths = {
  checkmark: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  team: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
};
---

<article class={`card ${featured ? 'md:col-span-1 md:row-span-2' : ''} group hover:shadow-xl transition-all duration-normal ${featured ? 'border-2 border-brand-cyan/30 dark:border-brand-cyan/20' : ''}`}>
  <div class={`w-14 h-14 ${featured ? 'w-16 h-16' : ''} bg-gradient-to-br from-brand-cyan-lightest to-brand-cyan-lighter dark:from-brand-cyan/30 dark:to-brand-cyan/20 rounded-xl flex items-center justify-center mb-6 ${featured ? 'mb-8' : ''} group-hover:scale-110 transition-transform duration-normal`} aria-hidden="true">
    <svg class={`${featured ? 'w-8 h-8' : 'w-7 h-7'} text-brand-cyan-darker dark:text-brand-cyan`} fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[icon]} />
    </svg>
  </div>
  <h3 class={`${featured ? 'text-h3 md:text-h2' : 'text-h4'} mb-4 ${featured ? 'mb-6' : ''} dark:text-white font-bold tracking-tight`}>{title}</h3>
  <p class={`text-neutral-700 dark:text-neutral-200 leading-relaxed ${featured ? 'text-lg md:text-xl max-w-none' : 'max-w-[65ch]'}`}>
    {description}
  </p>
</article>

