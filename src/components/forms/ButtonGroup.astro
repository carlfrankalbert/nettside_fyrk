---
import { buttonClasses, transitionClasses, cn } from '../../utils/classes';

/**
 * Button group component for consistent CTA layouts
 */
interface Button {
  text: string;
  href: string;
  variant?: 'primary' | 'outline';
  ariaLabel?: string;
}

interface Props {
  buttons: Button[];
  class?: string;
}

const { buttons, class: className = '' } = Astro.props;
---

<div class={cn('flex flex-col sm:flex-row gap-4 md:gap-6 justify-center', className)}>
  {buttons.map((button) => {
    const buttonClass = button.variant === 'outline' 
      ? buttonClasses.outline 
      : buttonClasses.primary;
    
    return (
      <a 
        href={button.href}
        class={cn(buttonClass, buttonClasses.large, button.variant === 'primary' && buttonClasses.withShadow, button.variant === 'outline' && 'hover:shadow-md', transitionClasses.normal)}
        aria-label={button.ariaLabel || button.text}
      >
        {button.text}
      </a>
    );
  })}
</div>

