---
interface Props {
  heading: string;
  items: string[];
  headingId?: string;
}

const { heading, items, headingId } = Astro.props;
---

<div class="max-w-5xl mx-auto">
  <h2 id={headingId} class="text-h2 md:text-[2.75rem] text-center mb-12 md:mb-16 dark:text-white font-bold tracking-tight">{heading}</h2>
  <ul class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8" role="list">
    {items.map((item) => (
      <li class="flex items-start gap-4 md:gap-5 group">
        <div class="flex-shrink-0 w-7 h-7 md:w-8 md:h-8 bg-gradient-to-br from-brand-cyan to-brand-cyan-dark rounded-lg flex items-center justify-center mt-0.5 group-hover:scale-110 transition-transform duration-normal" aria-hidden="true">
          <svg class="w-4 h-4 md:w-5 md:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <p class="text-lg md:text-xl text-neutral-700 dark:text-neutral-200 leading-relaxed pt-0.5">
          {item}
        </p>
      </li>
    ))}
  </ul>
</div>

