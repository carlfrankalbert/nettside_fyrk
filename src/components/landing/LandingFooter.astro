---
/**
 * Landing page footer
 * Displays company info and contact links
 */
import LandingLogo from '../ui/LandingLogo.astro';

interface Props {
  address: string;
  orgNumber: string;
  emailHref: string;
  emailLabel: string;
  linkedinHref: string;
  linkedinLabel: string;
}

const { address, orgNumber, emailHref, emailLabel, linkedinHref, linkedinLabel } = Astro.props;
---

<footer class="py-10 px-6 border-t border-neutral-200 bg-neutral-50" role="contentinfo">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6 text-sm text-neutral-500">
      <div class="flex flex-col items-center md:items-start gap-3">
        <LandingLogo variant="muted" />
        <div class="text-xs text-neutral-600 text-center md:text-left">
          <p class="mb-1">{address}</p>
          <p class="mb-0">Org.nr: {orgNumber}</p>
        </div>
      </div>

      <div class="flex flex-wrap justify-center md:justify-end items-center gap-4 md:gap-6">
        <a href="/tjenester" class="hover:text-brand-navy transition-colors no-underline">Tjenester</a>
        <a href="/verktoy" class="hover:text-brand-navy transition-colors no-underline">Verktøy</a>
        <a href="/releaselog" class="hover:text-brand-navy transition-colors no-underline">Releaselog</a>
        <a href={emailHref} class="hover:text-brand-navy transition-colors no-underline">{emailLabel}</a>
        <a href={linkedinHref} target="_blank" rel="noopener noreferrer" class="hover:text-brand-navy transition-colors no-underline">{linkedinLabel}</a>
        <a href="/personvern" class="hover:text-brand-navy transition-colors no-underline">Personvern</a>
        <a href="/vilkar" class="hover:text-brand-navy transition-colors no-underline">Vilkår</a>
      </div>
    </div>
  </div>
</footer>
