---
/**
 * Landing page header with navigation
 * Simplified header specifically for the landing page
 */
import LandingLogo from '../ui/LandingLogo.astro';
import { ELEMENT_IDS } from '../../utils/constants';

interface NavLink {
  href: string;
  label: string;
  isCta?: boolean;
}

interface Props {
  navLinks: readonly NavLink[];
}

const { navLinks } = Astro.props;
const currentPath = Astro.url.pathname;

function isActive(href: string): boolean {
  if (href.startsWith('/#') || href.startsWith('mailto:')) return false;
  if (currentPath === href || currentPath === href + '/') return true;
  // Match sub-pages (e.g. /tjenester/beslutningsgjennomgang → /tjenester)
  if (href !== '/' && currentPath.startsWith(href + '/')) return true;
  return false;
}
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-200">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 no-underline">
      <LandingLogo />
    </a>

    {navLinks.length > 0 && (
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          link.isCta ? (
            <a
              href={link.href}
              class="btn btn-primary no-underline text-sm py-2 px-4"
              data-track-button="nav_cta"
            >
              {link.label}
            </a>
          ) : (
            <a
              href={link.href}
              class:list={[
                'no-underline font-medium transition-colors',
                isActive(link.href) ? 'text-brand-navy underline underline-offset-4 decoration-2' : 'text-neutral-700 hover:text-brand-navy'
              ]}
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.label}
            </a>
          )
        ))}
      </div>
    )}

    {navLinks.length > 0 && (
      <button
        id={ELEMENT_IDS.MOBILE_MENU_BUTTON}
        class="md:hidden p-3 min-h-[48px] min-w-[48px] flex items-center justify-center text-neutral-700 focus-visible:ring-2 focus-visible:ring-brand-cyan-darker focus-visible:ring-offset-2 rounded-md"
        aria-label="Åpne meny"
        aria-expanded="false"
        aria-controls={ELEMENT_IDS.MOBILE_MENU}
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    )}
  </nav>

  {navLinks.length > 0 && (
    <div id={ELEMENT_IDS.MOBILE_MENU} class="hidden md:hidden border-t border-neutral-200 bg-white">
      <div class="px-6 py-3 space-y-1">
        {navLinks.map((link) => (
          link.isCta ? (
            <a
              href={link.href}
              class="btn btn-primary no-underline text-sm py-2 px-4 mt-2 inline-flex"
              data-track-button="nav_cta_mobile"
            >
              {link.label}
            </a>
          ) : (
            <a
              href={link.href}
              class:list={[
                'no-underline font-medium py-2 min-h-[44px] flex items-center',
                isActive(link.href) ? 'text-brand-navy font-semibold' : 'text-neutral-700 hover:text-brand-navy'
              ]}
              aria-current={isActive(link.href) ? 'page' : undefined}
            >
              {link.label}
            </a>
          )
        ))}
      </div>
    </div>
  )}
</header>
