---
/**
 * Hero section for the landing page
 * Features headline and call-to-action
 */

interface Props {
  headline: string;
  description: string;
  subDescription?: string;
  ctaText: string;
  ctaHref: string;
}

const { headline, description, subDescription, ctaText, ctaHref } = Astro.props;
---

<section class="pt-32 pb-20 md:pt-40 md:pb-24 px-6 bg-white">
  <div class="max-w-3xl mx-auto flex flex-col items-center text-center">
    <h1 class="text-h2 sm:text-h1 md:text-display font-semibold text-brand-navy mb-8 leading-tight md:text-balance max-w-4xl">
      {headline}
    </h1>

    <p class="text-lg md:text-xl text-neutral-600 mb-4 max-w-2xl leading-relaxed">
      {description}
    </p>

    {subDescription && (
      <p class="text-base text-neutral-500 max-w-2xl">
        {subDescription}
      </p>
    )}

    <a href={ctaHref} class="btn btn-primary no-underline mt-10" data-track-button="hero_cta">
      {ctaText}
    </a>
  </div>
</section>
