---
/**
 * About section for the landing page
 * Displays information about Carl Johnson
 */

interface Props {
  title: string;
  paragraphs: string[];
  aiNote: string;
}

const { title, paragraphs, aiNote } = Astro.props;
---

<section id="om" class="py-20 md:py-28 px-6 bg-neutral-50 border-y border-neutral-200">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-h2 font-semibold text-brand-navy mb-8 text-center">
      {title}
    </h2>

    <div class="text-lg text-neutral-600 space-y-6 text-center">
      {paragraphs.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
      <p class="text-base text-neutral-500 pt-4">{aiNote}</p>
    </div>
  </div>
</section>
