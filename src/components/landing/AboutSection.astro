---
/**
 * About section for the landing page
 * "Hvem st√•r bak" - Consolidated section with founder info, experience, and LinkedIn CTA
 */

interface LinkedinCta {
  text: string;
  href: string;
}

interface Founder {
  heading: string;
  image?: string;
  paragraphs: readonly string[];
  experience: string;
  linkedinCta: LinkedinCta;
}

interface ContentBlock {
  heading: string;
  paragraphs: readonly string[];
}

interface Props {
  title: string;
  whyFyrk: ContentBlock;
  founder: Founder;
}

const { title, whyFyrk, founder } = Astro.props;
---

<section id="om" class="py-16 md:py-20 px-6 bg-neutral-50 scroll-mt-20">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-h3 font-semibold text-brand-navy mb-10 text-center">
      {title}
    </h2>

    <!-- Hvorfor FYRK -->
    <div class="mb-12">
      <h3 class="text-h4 font-semibold text-brand-navy mb-4">
        {whyFyrk.heading}
      </h3>
      <div class="text-lg text-neutral-600 space-y-4">
        {whyFyrk.paragraphs.map((paragraph) => (
          <p>{paragraph}</p>
        ))}
      </div>
    </div>

    <!-- Carl Johnson, grunnlegger -->
    <div class="bg-white rounded-xl p-8 border border-neutral-200">
      <div class="flex flex-col md:flex-row gap-6 mb-6">
        {founder.image && (
          <div class="flex-shrink-0">
            <img
              src={founder.image}
              alt={founder.heading}
              class="w-24 h-24 md:w-32 md:h-32 rounded-xl object-cover grayscale"
              loading="lazy"
            />
          </div>
        )}
        <div class="flex-1">
          <h3 class="text-h4 font-semibold text-brand-navy mb-4">
            {founder.heading}
          </h3>
          <div class="text-lg text-neutral-600 space-y-4">
            {founder.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
      </div>

      <!-- Komprimert erfaring -->
      <div class="border-t border-neutral-100 pt-6">
        <p class="text-neutral-600">
          {founder.experience}
        </p>
        <p class="text-sm text-neutral-500 mt-4">
          <a
            href={founder.linkedinCta.href}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 hover:text-brand-navy transition-colors"
            data-track-button="about_linkedin"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 3A2 2 0 0 1 21 5V19A2 2 0 0 1 19 21H5A2 2 0 0 1 3 19V5A2 2 0 0 1 5 3H19M18.5 18.5V13.2A3.26 3.26 0 0 0 15.24 9.94C14.39 9.94 13.4 10.46 12.92 11.24V10.13H10.13V18.5H12.92V13.57C12.92 12.8 13.54 12.17 14.31 12.17A1.4 1.4 0 0 1 15.71 13.57V18.5H18.5M6.88 8.56A1.68 1.68 0 0 0 8.56 6.88C8.56 5.95 7.81 5.19 6.88 5.19A1.69 1.69 0 0 0 5.19 6.88C5.19 7.81 5.95 8.56 6.88 8.56M8.27 18.5V10.13H5.5V18.5H8.27Z"/>
            </svg>
            {founder.linkedinCta.text}
          </a>
        </p>
      </div>
    </div>
  </div>
</section>
