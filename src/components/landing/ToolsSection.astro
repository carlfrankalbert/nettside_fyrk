---
/**
 * Tools section for the landing page
 * Displays available tools and upcoming features
 */
interface ToolDefinition {
  title: string;
  description: string;
  href: string;
  buttonText: string;
  iconPath?: string;
  isBeta?: boolean;
  featureId?: string;
}

interface Props {
  title: string;
  description: string;
  intro?: string;
  tools: ToolDefinition[];
  comingSoonText: string;
}

const { title, description, intro, tools, comingSoonText } = Astro.props;
---

<section id="verktoy" class="min-h-[80vh] py-20 md:py-28 px-6 bg-brand-navy relative overflow-hidden flex items-center scroll-mt-20">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3"></div>

  <div class="max-w-4xl mx-auto relative z-10 w-full">
    <h2 class="text-h2 font-semibold text-white mb-4 text-center">
      {title}
    </h2>
    <p class="text-lg text-neutral-300 mb-8 text-center max-w-2xl mx-auto">
      {description}
    </p>

    {intro && (
      <p class="text-base text-neutral-400 mb-8 text-center max-w-2xl mx-auto italic">
        {intro}
      </p>
    )}

    <div class="grid gap-8">
      {tools.map((tool) => (
        <div class="bg-white rounded-xl p-8 md:p-10 shadow-lg">
          <div class="flex flex-col md:flex-row md:items-center gap-6">
            <div class="w-16 h-16 bg-brand-navy rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d={tool.iconPath || 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4'}></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <h3 class="text-h4 font-semibold text-brand-navy">{tool.title}</h3>
                {tool.isBeta && (
                  <span class="text-xs font-medium text-brand-navy bg-brand-cyan-lightest px-2 py-0.5 rounded-full">
                    Beta
                  </span>
                )}
              </div>
              <p class="text-neutral-600 mb-4">{tool.description}</p>
              <a
                href={tool.href}
                class="btn btn-primary no-underline inline-flex"
                data-track-button={`tools_${tool.featureId || 'okr'}_cta`}
              >
                {tool.buttonText}
              </a>
            </div>
          </div>
        </div>
      ))}

      <!-- More tools coming -->
      <div class="bg-white/10 rounded-xl p-8 md:p-10 border border-white/20 text-center">
        <p class="text-white/80 font-medium mb-0">
          {comingSoonText}
        </p>
      </div>
    </div>

    <p class="text-sm text-white/50 text-center mt-8">
      Verktøyene bruker AI og gir refleksjonsstøtte, ikke profesjonell rådgivning. Ingen data lagres – teksten slettes umiddelbart etter analyse. <a href="/personvern" class="text-white/60 underline hover:text-white/80">Personvern</a>.
    </p>
  </div>
</section>
