---
/**
 * Tools section for the landing page
 * Displays available tools and upcoming features
 */

interface Tool {
  title: string;
  description: string;
  href: string;
  buttonText: string;
}

interface Props {
  title: string;
  description: string;
  tools: Tool[];
  comingSoonText: string;
}

const { title, description, tools, comingSoonText } = Astro.props;
---

<section id="verktoy" class="py-20 md:py-28 px-6 bg-brand-navy relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3"></div>

  <div class="max-w-4xl mx-auto relative z-10">
    <h2 class="text-h2 font-semibold text-white mb-4 text-center">
      {title}
    </h2>
    <p class="text-lg text-neutral-300 mb-12 text-center max-w-2xl mx-auto">
      {description}
    </p>

    <div class="grid gap-8">
      {tools.map((tool) => (
        <div class="bg-white rounded-xl p-8 md:p-10 shadow-lg">
          <div class="flex flex-col md:flex-row md:items-center gap-6">
            <div class="w-16 h-16 bg-brand-navy rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-h4 font-semibold text-brand-navy mb-2">{tool.title}</h3>
              <p class="text-neutral-600 mb-4">{tool.description}</p>
              <a href={tool.href} class="btn btn-primary no-underline inline-flex">
                {tool.buttonText}
              </a>
            </div>
          </div>
        </div>
      ))}

      <!-- More tools coming -->
      <div class="bg-white/10 rounded-xl p-8 md:p-10 border border-white/20 text-center">
        <p class="text-white/80 font-medium mb-0">
          {comingSoonText}
        </p>
      </div>
    </div>
  </div>
</section>
