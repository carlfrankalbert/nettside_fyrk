---
/**
 * Tools showcase section for the landing page
 * Features key tools to drive discovery from the main entry point
 */

interface Tool {
  name: string;
  description: string;
  href: string;
  ctaText: string;
}

interface Props {
  title: string;
  intro: string;
  tools: readonly Tool[];
}

const { title, intro, tools } = Astro.props;
---

<section id="verktoy" class="py-16 md:py-20 px-6 bg-neutral-100 border-y border-neutral-200 scroll-mt-20">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-h3 font-semibold text-brand-navy mb-4 text-center">
      {title}
    </h2>
    <p class="text-neutral-600 text-center mb-10 max-w-2xl mx-auto">
      {intro}
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.href}
          class="block rounded-xl bg-white border border-neutral-200 p-6 hover:border-neutral-300 hover:shadow-sm transition-all no-underline group"
        >
          <h3 class="text-h4 font-semibold text-brand-navy mb-2 group-hover:text-brand-navy/80">
            {tool.name}
          </h3>
          <p class="text-sm text-neutral-600 mb-4">
            {tool.description}
          </p>
          <span class="inline-flex items-center gap-1 text-sm font-medium text-brand-navy group-hover:text-brand-navy/80 transition-colors">
            {tool.ctaText}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </a>
      ))}
    </div>

    <p class="text-sm text-neutral-500 text-center mt-8">
      Gratis. Ingen innlogging. Ingen data lagres.
      <a href="/verktoy" class="text-brand-navy hover:text-brand-navy/80 underline underline-offset-2 font-medium ml-1">Se alle verkt√∏y</a>
    </p>
  </div>
</section>
