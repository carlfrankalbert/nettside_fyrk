---
/**
 * Testimonials section displaying quotes from former colleagues
 */

interface Testimonial {
  quote: string;
  role: string;
  company: string;
}

interface Props {
  title: string;
  testimonials: Testimonial[];
}

const { title, testimonials } = Astro.props;
---

<section class="py-20 md:py-28 px-6 bg-white relative overflow-hidden">
  <!-- Subtle diagonal FYRK signature element -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute -left-1/4 top-1/3 w-[600px] h-[300px] bg-gradient-to-tr from-brand-navy/[0.03] to-transparent rotate-[-25deg] rounded-[100px]"></div>
  </div>

  <div class="max-w-4xl mx-auto relative z-10">
    <h2 class="text-h2 font-semibold text-brand-navy mb-12 text-center">
      {title}
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      {testimonials.map((testimonial) => (
        <blockquote class="bg-neutral-50 rounded-xl p-8 border border-neutral-100 relative">
          <!-- Quote mark -->
          <svg class="absolute top-4 left-4 w-8 h-8 text-brand-navy/10" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          <p class="text-neutral-600 text-lg italic mb-4 pt-6">
            "{testimonial.quote}"
          </p>

          <footer class="text-sm text-neutral-500">
            <span class="font-medium text-brand-navy">{testimonial.role}</span>, {testimonial.company}
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>
