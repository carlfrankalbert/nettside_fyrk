---
interface Props {
  id?: string;
  ariaLabelledBy?: string;
  background?: 'white' | 'neutral' | 'navy' | 'gradient';
  padding?: 'normal' | 'large';
  class?: string;
}

const { 
  id,
  ariaLabelledBy,
  background = 'white',
  padding = 'normal',
  class: className = ''
} = Astro.props;

const backgroundClasses = {
  white: 'bg-white dark:bg-neutral-900',
  neutral: 'bg-neutral-50 dark:bg-neutral-800',
  navy: 'bg-brand-navy text-white',
  gradient: 'bg-gradient-to-b from-neutral-50 to-white dark:from-neutral-800 dark:to-neutral-900',
};

const paddingClasses = {
  normal: 'py-24 md:py-32',
  large: 'py-32 md:py-40',
};
---

<section 
  id={id}
  class={`${backgroundClasses[background]} ${paddingClasses[padding]} ${className}`}
  aria-labelledby={ariaLabelledBy}
>
  <div class="container mx-auto px-4">
    <slot />
  </div>
</section>

