---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Decision Loop' } = Astro.props;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-neutral-50 text-neutral-900">
    <nav class="border-b border-neutral-200 bg-white px-6 py-3">
      <div class="mx-auto flex max-w-3xl items-center justify-between">
        <a href="/" class="text-lg font-semibold">Decision Loop</a>
        <div class="flex gap-4 text-sm">
          <a href="/" class="hover:text-neutral-600">Today</a>
          <a href="/log" class="hover:text-neutral-600">Log</a>
        </div>
      </div>
    </nav>
    <main class="mx-auto max-w-3xl px-6 py-8">
      <slot />
    </main>
  </body>
</html>
