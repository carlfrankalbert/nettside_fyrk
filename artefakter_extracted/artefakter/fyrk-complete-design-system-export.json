    "description": "Komplett WCAG 2.1 AA-compliant designsystem for FYRK - Norwegian B2B Fintech",
    "author": "FYRK",
    "created": "2025-11-07",
    "compliance": "WCAG 2.1 Level AA",
    "license": "Proprietary",
    "documentation": "https://fyrk.no/design-system"
  },
  "brand": {
    "name": "FYRK",
    "tagline": "Vi hjelper organisasjoner å få mennesker, prosesser og teknologi til å virke sammen for å skape produkter som virker",
    "values": [
      "Autoritet og profesjonalitet",
      "Klarhet og presisjon",
      "Innovasjon gjennom teknologi",
      "Menneskesentrisk design",
      "WCAG 2.1 AA compliance som standard"
    ],
    "target_audience": "B2B Fintech, regulerte industrier, bedriftskunder",
    "design_principles": [
      "Klarhet over kreativitet",
      "Autoritet gjennom typografi",
      "Tilgjengelighet som ikke-forhandlingsbart krav",
      "8-punkts grid-system for konsistens",
      "Geometrisk sans-serif typografi",
      "Dyp marineblå for profesjonalitet",
      "Skarp turkis/cyan for KI og innovasjon"
    ]
  },
  "design_system_contents": {
    "colors": {
      "brand": {
        "navy": "#001F3F",
        "cyan": "#5AB9D3",
        "white": "#FFFFFF"
      },
      "feedback": {
        "success": "#0F7C3E",
        "error": "#C41E3A",
        "warning": "#E67E22",
        "info": "#1E88E5"
      },
      "neutrals": {
        "gray_50": "#FAFAFA",
        "gray_100": "#F5F5F5",
        "gray_700": "#333333"
      }
    },
    "typography": {
      "font_family": {
        "primary": "Inter",
        "body": "System fonts",
        "mono": "Courier New"
      },
      "font_sizes": {
        "display": "56px",
        "h1": "48px",
        "h2": "36px",
        "h3": "28px",
        "base": "16px"
      },
      "font_weights": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "line_heights": {
        "tight": 1.2,
        "snug": 1.3,
        "normal": 1.5,
        "relaxed": 1.6
      }
    },
    "spacing": {
      "system": "8-point grid",
      "values": {
        "1": "4px",
        "2": "8px",
        "4": "16px",
        "6": "24px",
        "8": "32px",
        "12": "48px",
        "16": "64px",
        "24": "96px"
      }
    },
    "border_radius": {
      "sm": "4px",
      "md": "6px",
      "lg": "8px",
      "xl": "12px",
      "2xl": "16px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0,0,0,0.05)",
      "md": "0 4px 6px rgba(0,0,0,0.1)",
      "lg": "0 10px 15px rgba(0,0,0,0.1)",
      "xl": "0 20px 25px rgba(0,0,0,0.1)"
    }
  },
  "components": {
    "button": {
      "variants": [
        "primary",
        "secondary",
        "accent",
        "outline",
        "ghost"
      ],
      "sizes": {
        "sm": "40px",
        "md": "48px",
        "lg": "56px"
      },
      "padding": {
        "sm": "0 16px",
        "md": "0 24px",
        "lg": "0 32px"
      },
      "wcag_compliance": "WCAG 2.1 AA with enhanced 48px touch targets"
    },
    "input": {
      "height": "48px",
      "padding": "12px 16px",
      "border_radius": "8px"
    },
    "card": {
      "padding": "24px",
      "shadow": "md",
      "border_radius": "8px"
    },
    "navigation": {
      "component": "FyrkNavigation",
      "height": "64px",
      "features": [
        "Sticky positioning",
        "Skip link",
        "Keyboard navigation"
      ]
    },
    "sidebar": {
      "component": "FyrkSidebar",
      "width": {
        "collapsed": "64px",
        "expanded": "280px"
      },
      "features": [
        "Collapsible",
        "Keyboard shortcut: Alt+S"
      ]
    },
    "tabs": {
      "component": "FyrkTabs",
      "variants": [
        "default",
        "pills"
      ],
      "features": [
        "Arrow key navigation",
        "ARIA support"
      ]
    },
    "toast": {
      "component": "FyrkToast (Sonner)",
      "variants": [
        "default",
        "success",
        "error",
        "warning",
        "info"
      ],
      "duration": {
        "default": "4000ms",
        "success": "3000ms",
        "error": "6000ms"
      }
    },
    "pagination": {
      "component": "FyrkPagination",
      "min_touch_target": "48px"
    },
    "breadcrumb": {
      "component": "FyrkBreadcrumb",
      "separator": "/",
      "features": [
        "JSON-LD support"
      ]
    },
    "data_card": {
      "component": "FyrkDataCard",
      "features": [
        "Icon support",
        "Trend indicators"
      ]
    },
    "loading": {
      "component": "FyrkSpinner",
      "sizes": [
        "sm",
        "md",
        "lg"
      ]
    }
  },
