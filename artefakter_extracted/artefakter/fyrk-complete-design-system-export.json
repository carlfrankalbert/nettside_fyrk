    }
  ],
  "accessibility": {
    "compliance_level": "WCAG 2.1 Level AA",
    "focus": {
      "ring_width": "3px",
      "ring_color": "#5AB9D3",
      "ring_offset": "2px"
    },
    "touch_targets": {
      "wcag_minimum": "44px",
      "fyrk_standard": "48px"
    },
    "color_contrast": {
      "normal_text": "4.5:1 minimum",
      "large_text": "3:1 minimum",
      "ui_components": "3:1 minimum",
      "all_tested": true
    },
    "keyboard_navigation": {
      "supported": true,
      "skip_links": true,
      "focus_management": "Comprehensive",
      "tab_order": "Logical"
    },
    "screen_readers": {
      "aria_labels": "Required for all interactive elements",
      "alt_text": "Required for all images",
      "semantic_html": "Used throughout"
    },
    "reduced_motion": "All animations respect prefers-reduced-motion"
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "350ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)"
    }
  },
  "file_structure": {
    "components": {
      "brand": "FYRK-specific branded components (20+ components)",
      "ui": "shadcn/ui base components (40+ components)",
      "templates": "Complete page templates (4 templates)",
      "figma": "Figma integration utilities"
    },
    "guidelines": "12+ comprehensive markdown documentation files",
    "styles": "Global CSS including Tailwind v4.0 configuration",
    "exports": "Logo exports in various formats"
  },
  "usage_guidelines": {
    "do": [
      "Bruk dyp marineblå (#001F3F) for alle primære elementer",
      "Bruk cyan (#5AB9D3) for KI og innovasjonsrelaterte elementer",
      "Følg 8-punkts grid-systemet for spacing",
      "Sørg for minimum 48px touch targets på alle interaktive elementer",
      "Test all farge-kontrast med WCAG 2.1 AA verktøy",
      "Bruk cyan.text (#2F8FA8) for cyan tekst på hvit bakgrunn",
      "Inkluder alt-tekst for alle bilder",
      "Bruk semantisk HTML",
      "Test med keyboard navigation",
      "Test med skjermlesere"
    ],
    "dont": [
      "Bruk aldri cyan (#5AB9D3) for tekst på hvit bakgrunn - fails WCAG",
      "Ikke bruk font-sizes under 16px for body tekst",
      "Ikke bruk touch targets mindre enn 48px",
      "Ikke ignorer focus states",
      "Ikke bruk kun farge for å formidle informasjon",
      "Ikke bruk komplekse animasjoner uten reduced motion support",
      "Ikke bruk bilder uten alt-tekst",
      "Ikke lag custom komponenter som ignorerer keyboard navigation"
    ]
  },
  "export_formats": {
    "figma_tokens": {
      "file": "fyrk-design-tokens.json",
      "format": "W3C Design Tokens Community Group format",
      "compatible_with": [
